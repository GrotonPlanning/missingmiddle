<body>

<div id="calendar-container">
  <h2>Community Events Calendar</h2>
  <div id="calendar-nav">
    <button id="prevMonth">&#8592; Prev</button>
    <span id="monthLabel"></span>
    <button id="nextMonth">Next &#8594;</button>
  </div>
  <div id="calendar"></div>
</div>

<script>
  // ===========================
  // üóìÔ∏è UPDATE EVENTS HERE
  // ===========================
  const events = [
    {
      date: '2025-11-14',
      title: 'Town of Groton Missing Middle Housing Inventory',
      time: '12:00 PM',
      loc: 'Online Virtual Release',
      desc: 'Check page for a dedicated project page on Missing Middle Housing types in Groton',
      
    },
    {
      date: '2025-11-21',
      title: 'Poquonnock Bridge Missing Middle Housing Walking Tour',
      time: '3:30 PM ‚Äì 4:30 PM',
      loc: 'Community Center parking lot at 45 Fort Hill Rd.',
      desc: 'RSVP for our upcoming walking tour using the link below.',
      link: 'https://arcg.is/0yyqCT'
    },
  ];

  // ===========================
  // ‚öôÔ∏è CALENDAR LOGIC
  // ===========================
  let currentMonth = new Date().getMonth();
  let currentYear = new Date().getFullYear();

  const calendar = document.getElementById('calendar');
  const monthLabel = document.getElementById('monthLabel');
  const prevBtn = document.getElementById('prevMonth');
  const nextBtn = document.getElementById('nextMonth');
  const dayLabels = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];

  function createTooltip(event, eventData) {
    const tooltip = document.createElement('div');
    tooltip.className = 'tooltip';
    tooltip.innerHTML = `
      <strong>${eventData.title}</strong><br>
      ${eventData.time}<br>
      ${eventData.loc}<br><br>
      <small>${eventData.desc}</small>
      ${eventData.link ? `<br><a href="${eventData.link}" class="button" target="_blank">More Info</a>` : ''}
    `;
    document.body.appendChild(tooltip);

    const rect = event.target.getBoundingClientRect();
    tooltip.style.top = rect.bottom + window.scrollY + 6 + 'px';
    tooltip.style.left = rect.left + window.scrollX + rect.width/2 - tooltip.offsetWidth/2 + 'px';
    tooltip.style.display = 'block';

    return tooltip;
  }

  function renderCalendar(month, year) {
    calendar.innerHTML = '';

    dayLabels.forEach(label => {
      const dayLabel = document.createElement('div');
      dayLabel.className = 'calendar-day-label';
      dayLabel.textContent = label;
      calendar.appendChild(dayLabel);
    });

    const firstDay = new Date(year, month, 1);
    const startDay = firstDay.getDay();
    const daysInMonth = new Date(year, month + 1, 0).getDate();
    monthLabel.textContent = `${firstDay.toLocaleString('default', { month: 'long' })} ${year}`;

    for(let i = 0; i < startDay; i++) calendar.appendChild(document.createElement('div'));

    for(let day = 1; day <= daysInMonth; day++) {
      const cell = document.createElement('div');
      cell.className = 'day';

      const dayNumber = document.createElement('div');
      dayNumber.className = 'day-number';
      dayNumber.textContent = day;
      cell.appendChild(dayNumber);

      const dateString = `${year}-${String(month+1).padStart(2,'0')}-${String(day).padStart(2,'0')}`;
      const eventData = events.find(e => e.date === dateString);

      if(eventData) {
        cell.classList.add('has-event');
        let tooltip;
        cell.addEventListener('mouseenter', e => {
          tooltip = createTooltip(e, eventData);
        });
        cell.addEventListener('mouseleave', () => {
          if(tooltip) tooltip.remove();
        });
      }

      calendar.appendChild(cell);
    }
  }

  prevBtn.addEventListener('click', () => {
    currentMonth--;
    if(currentMonth < 0) { currentMonth = 11; currentYear--; }
    renderCalendar(currentMonth, currentYear);
  });

  nextBtn.addEventListener('click', () => {
    currentMonth++;
    if(currentMonth > 11) { currentMonth = 0; currentYear++; }
    renderCalendar(currentMonth, currentYear);
  });

  renderCalendar(currentMonth, currentYear);
</script>

</body>
</html>
