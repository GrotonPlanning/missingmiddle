    }
    h2 {
      text-align: center;
      font-weight: 600;
    }
    #calendar-nav {
      text-align: center;
      margin-bottom: 10px;
    }
    #calendar-nav button {
      background: #003366;
      color: white;
      border: none;
      padding: 6px 10px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
    }
    #monthLabel {
      margin: 0 10px;
      font-weight: 600;
    }
    #calendar {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      gap: 6px;
      max-width: 700px;
      margin: 0 auto;
      padding: 10px;
    }
    .day {
      border: 1px solid #ccc;
      border-radius: 6px;
      min-height: 80px;
      position: relative;
      text-align: right;
      padding: 5px;
      background-color: #fff;
      transition: all 0.2s ease;
    }
    .day:hover {
      box-shadow: 0 0 8px rgba(0,0,0,0.2);
      cursor: pointer;
    }
    .day.has-event {
      background-color: #e8f0ff;
      border-color: #0055a5;
      font-weight: 600;
    }
    .day-number {
      font-size: 14px;
    }
    .tooltip {
      display: none;
      position: absolute;
      z-index: 10;
      top: 100%;
      left: 50%;
      transform: translateX(-50%);
      width: 220px;
      background-color: white;
